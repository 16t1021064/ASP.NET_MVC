@model LiteCommerce.DomainModels.ProductGallery

<form action="~/Product/SaveGallery/@Model.GalleryID" method="post">
    <div class="form-group">
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(m => m.GalleryID)
    @Html.HiddenFor(m => m.ProductID)
    <div class="form-group">
        <label>Link ảnh:</label>
        @if (Model.GalleryID != 0)
        {
            <img src="@Model.Photo" style="width:400px; height:400px" />
        }
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control " })
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Mô tả:</label>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control " })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Thứ tự hiển thị:</label>
                @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control " })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Trạng thái:</label>
                <select class="form-control" id="IsHidden" name="IsHidden">
                    <option value="False">Ẩn</option>
                    <option value="True">Hiện</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Product/Edit/@Model.ProductID" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>