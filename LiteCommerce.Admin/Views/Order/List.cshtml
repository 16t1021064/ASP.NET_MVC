@model LiteCommerce.Admin.Models.OrderPaginationQueryResult

@{
    Layout = null;
}
<div class="text-left">
    <p>
        Có tất cả <strong>@Model.RowCount</strong> mặt hàng.
        Bạn đang ở trang <strong>@Model.Page</strong>
        trên tổng số <strong>@Model.PageCount</strong> trang.
    </p>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Khách hàng</th>
            <th>Nhân viên</th>
            <th>Vận chuyển</th>
            <th>Ngày đặt</th>
            <th>Ngày duyệt</th>
            <th>Ngày giao</th>
            <th>Ngày nhận</th>
            <th>Trạng thái</th>
            <th>
                <a href="~/Product/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    <a href="~/Order/Details/@item.OrderID">@item.OrderID</a>
                </td>
                <td>@item.CustomerID</td>
                <td>@item.EmployeeID</td>
                <td>@item.ShipperID</td>
                <td>@item.OrderTime</td>
                <td>@item.AcceptTime</td>
                <td>@item.ShippedTime</td>
                <td>@item.FinishedTime</td>
                <td>@item.Status</td>
                <td>
                    <a href="~/Product/Edit/@item.OrderID" class="btn btn-xs btn-info"><i class="fa fa-edit"></i></a>
                    <a href="~/Product/Delete/@item.OrderID" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (page == Model.Page)
                {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getOrders(@page)">@page</a></li>
            }
        }
    </ul>
</div>